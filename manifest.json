{
  "manifest_version": 3,
  "name": "Open Marxist.org",
  "version": "1.0",
  "description": "Opens Marxist.org in a new tab when clicked.",
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Marxist.org"
  },
  "permissions": ["tabs"],
  "browser_specific_settings": {
    "gecko": {
      "id": "marx@extension.com"
    }
  }
}
